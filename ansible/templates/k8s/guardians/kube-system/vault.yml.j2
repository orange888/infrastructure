---
apiVersion: v1
kind: Secret
metadata:
  name: vault
  namespace: kube-system
  labels:
    app.kubernetes.io/instance: vault
    app.kubernetes.io/name: vault
type: Opaque
data:
  cert.pem: "{{ vault.cert | b64encode }}"
  key.pem: "{{ vault.key | b64encode }}"
  CONSUL_TOKEN: "{{ vault.consul_token | b64encode }}"
